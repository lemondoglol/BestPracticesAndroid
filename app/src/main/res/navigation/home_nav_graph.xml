<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bestpracticesapplication.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_fileTransferFragment"
            app:destination="@id/fileTransferFragment" />
        <action
            android:id="@+id/action_homeFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_homeFragment_to_oneTapSignInFragment"
            app:destination="@id/oneTapSignInFragment" />
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/fileTransferFragment"
        android:name="com.example.bestpracticesapplication.features.file_transfer.FileTransferFragment"
        android:label="FileTransferFragment" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.bestpracticesapplication.features.sign_in.SignInFragment"
        android:label="SignInFragment" />
    <fragment
        android:id="@+id/oneTapSignInFragment"
        android:name="com.example.bestpracticesapplication.features.sign_in.OneTapSignInFragment"
        android:label="OneTapSignInFragment" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.bestpracticesapplication.features.notifications.NotificationFragment"
        android:label="NotificationFragment" />
</navigation>